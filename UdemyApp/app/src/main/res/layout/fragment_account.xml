<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac2018_10_01.udemyapp.fragments.AccountFragment"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account"
            android:textColor="@color/white"
            android:padding="@dimen/size10"
            android:layout_marginLeft="@dimen/size10"
            android:textSize="@dimen/size20"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cvUser"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size10"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="@dimen/size100"
                    android:layout_height="@dimen/size100"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/profile1"/>

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivProfilePic"
                    android:layout_marginTop="@dimen/size20"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_centerHorizontal="true"
                    android:hint="hhfhfhehehf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size20"
                    android:layout_marginBottom="@dimen/size20"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvInstructor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:layout_below="@id/cvUser"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size10">

                    <TextView
                        android:id="@+id/tvInstructor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/becomeInstructor"
                        android:textSize="@dimen/size20"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:layout_below="@id/cvInstructor"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/size20">

                    <TextView
                        android:id="@+id/tvPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preference"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/size10"
                        android:textSize="@dimen/size20"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPlayback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lecture playback"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="@dimen/size10"
                        android:layout_below="@id/tvPreferences"
                        android:textSize="@dimen/size16"/>

                    <RelativeLayout
                        android:id="@+id/rlBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:layout_below="@id/tvPlayback">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Continue lecture in background"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size16"/>

                        <Switch
                            android:id="@+id/swLecture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size20"
                            android:theme="@style/MySwitch"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lecture playback"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="@dimen/size20"
                        android:layout_below="@id/rlBackground"
                        android:textSize="@dimen/size16"/>

                    <RelativeLayout
                        android:id="@+id/rlVideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:layout_below="@id/tvVideo">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download via Wi-Fi only"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size16"/>

                        <Switch
                            android:id="@+id/swVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size20"
                            android:layout_marginBottom="@dimen/size10"
                            android:theme="@style/MySwitch"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download to SD card"
                            android:textColor="@color/black"
                            android:layout_below="@id/swVideo"
                            android:textSize="@dimen/size16"/>

                        <Switch
                            android:id="@+id/swSDcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/swVideo"
                            android:layout_marginRight="@dimen/size20"
                            android:theme="@style/MySwitch"/>

                        <RelativeLayout
                            android:id="@+id/rlVideoDownload"
                            android:layout_width="match_parent"
                            android:layout_below="@id/swSDcard"
                            android:layout_marginTop="@dimen/size10"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvQuality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video download quality"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size16"/>

                            <TextView
                                android:id="@+id/tvQualityValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="360p"
                                android:textColor="@color/cardview_dark_background"
                                android:layout_below="@id/tvQuality"
                                android:textSize="@dimen/size16"/>

                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification settings"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="@dimen/size20"
                        android:layout_below="@id/rlVideo"
                        android:textSize="@dimen/size16"/>

                    <TextView
                        android:id="@+id/tvNotificationPref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit notification preferences"
                        android:textColor="@color/black"
                        android:paddingBottom="@dimen/size10"
                        android:layout_marginTop="@dimen/size10"
                        android:layout_below="@id/tvNotification"
                        android:textSize="@dimen/size16"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            android:id="@+id/cvSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:layout_below="@id/cvPreferences">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/size20">

                <TextView
                    android:id="@+id/tvSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textColor="@color/black"
                    android:padding="@dimen/size10"
                    android:textSize="@dimen/size16"/>

                <TextView
                    android:id="@+id/tvShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share the Udemy app"
                    android:textColor="@color/black"
                    android:layout_below="@id/tvSupport"
                    android:padding="@dimen/size10"
                    android:textSize="@dimen/size16"/>

                <TextView
                    android:id="@+id/tvViewPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Privacy Policy"
                    android:textColor="@color/black"
                    android:layout_below="@id/tvShare"
                    android:padding="@dimen/size10"
                    android:textSize="@dimen/size16"/>

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms of Use"
                    android:textColor="@color/black"
                    android:layout_below="@id/tvViewPolicy"
                    android:padding="@dimen/size10"
                    android:textSize="@dimen/size16"/>

                <TextView
                    android:id="@+id/tvViewIPPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Intellectual Property Policy"
                    android:textColor="@color/black"
                    android:layout_below="@id/tvTerms"
                    android:padding="@dimen/size10"
                    android:textSize="@dimen/size16"/>

                <RelativeLayout
                    android:id="@+id/rlSignInSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvViewIPPolicy">

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/size10"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/size16"/>

                <TextView
                    android:id="@+id/tvSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Sign Out"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/size10"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="@dimen/size16"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_below="@id/rlSignInSignOut"
                    android:padding="@dimen/size10"
                    android:textAlignment="center"
                    android:textSize="@dimen/size16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>
