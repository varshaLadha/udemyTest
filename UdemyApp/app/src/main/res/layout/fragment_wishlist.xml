<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac2018_10_01.udemyapp.fragments.WishlistFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Wishlist"
            android:textColor="@color/white"
            android:padding="@dimen/size10"
            android:layout_marginLeft="@dimen/size10"
            android:textSize="@dimen/size20"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlMessage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size25"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Save courses for later"/>

                <TextView
                    android:id="@+id/tvMessage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size18"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tvMessage"
                    android:text="Courses added to your wishlist will be kept here"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rlMessage"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
