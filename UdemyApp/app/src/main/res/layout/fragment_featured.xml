<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="com.example.mac2018_10_01.udemyapp.fragments.FeaturedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Featured"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:padding="@dimen/size10"
                android:layout_marginLeft="@dimen/size10"
                android:textSize="@dimen/size20"/>

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_marginRight="@dimen/size10"
                android:textSize="@dimen/size16"/>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlAllCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvGeneralCourses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses Channel"
                    android:layout_marginTop="@dimen/size10"
                    android:textSize="@dimen/size20"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvGeneralCourses"
                    android:layout_marginTop="@dimen/size10">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:orientation="vertical"
                android:layout_below="@id/rlAllCategories">

                <TextView
                    android:id="@+id/tvAdvanceCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Your career"
                    android:textSize="@dimen/size20"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAdvanceCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_below="@id/tvAdvanceCourse">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
