<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mac2018_10_01.udemyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activity.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/udemy_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/udemy_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SigninActivity" />
        <activity android:name=".activity.EmailActivity" />
        <activity android:name=".activity.PasswordActivity" />
        <activity android:name=".activity.CreateAccountActivity" />
        <activity android:name=".activity.BrowseActivity" />
        <activity android:name=".activity.LoginSplashActivity"></activity>
    </application>

</manifest>